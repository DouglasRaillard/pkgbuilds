pkgname=qtcreator-src
_pkgver=3.1
_pkgpath=${_pkgver}.0-beta
pkgver=${_pkgver}.0beta1
pkgrel=1
pkgdesc="Source code of QtCreator IDE needed to build plugins"
arch=('any')
url="http://qt-project.org/wiki/Category:Tools::QtCreator"
license=('LGPL')
depends=()
options=('!strip')
makedepends=()
source=("http://download.qt-project.org/development_releases/qtcreator/${_pkgver}/${_pkgpath}/qt-creator-opensource-src-${_pkgpath}.tar.gz")
md5sums=('5f6a3fc64bc1a3c70d9ff4c86823e191')
sha512sums=('83e6e2e8530246c4474efa4465a8875e1703e9bdc556be07f50be26fdc5ec95412ae1b22b46c35209928cd29fa01ac29ddb2f0c72dc1a0a8f59efe24c110734b')

PKGEXT='.pkg.tar'

package () {
    cd "${srcdir}"
    mkdir -p "$pkgdir/usr/src/"
    cp -r "qt-creator-opensource-src-${_pkgpath}" "$pkgdir/usr/src/qtcreator"
}
